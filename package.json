{
    "name": "ws_task",
    "version": "1.0.0",
    "description": "Template for the WebSocket remote control task",
    "main": "index.js",
    "type": "commonjs",
    "scripts": {
      "start:prod": "npm-run-all --parallel watch:server watch:build:prod",
      "start:dev": "npm-run-all --parallel watch:server watch:build:dev",
      "watch:server": "nodemon ./app/main.js",
      "watch:build:prod": "webpack --mode production --watch",
      "watch:build:dev": "webpack --mode development --watch",
      "start": "node ./app/main.js",
      "build": "webpack --mode production",
      "test": "echo \"Error: no test specified\" && exit 1"
    },
    "author": "",
    "keywords": [],
    "license": "ISC",
    "devDependencies": {
        "clean-webpack-plugin": "^4.0.0",
        "eslint-config-prettier": "^8.5.0",
        "nodemon": "^2.0.16",
        "ts-loader": "^9.3.1",
        "webpack": "^5.73.0",
        "webpack-cli": "^4.10.0"
    },
    "dependencies": {
        "eslint-config-airbnb-base": "^15.0.0",
        "jimp": "^0.16.0",
        "npm-run-all": "^4.1.5",
        "robotjs": "^0.6.0",
        "ws": "^8.8.0"
    }
}
